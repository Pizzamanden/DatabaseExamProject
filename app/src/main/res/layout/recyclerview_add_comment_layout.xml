<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/comment_header"
        app:layout_constraintBottom_toTopOf="@+id/editText_commentCreation"
        app:layout_constraintEnd_toEndOf="@+id/editText_commentCreation"
        app:layout_constraintStart_toStartOf="@+id/editText_commentCreation"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_commentCreation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Type your comment here!"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_submitComment"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_submitComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/post_comment"
        app:layout_constraintBottom_toBottomOf="@+id/editText_commentCreation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>